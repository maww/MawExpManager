<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="52dp"
        android:orientation="horizontal">

        <TextView android:id="@+id/dialog_cost"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:gravity="center_vertical|right"
            android:layout_weight="5"
            android:singleLine="true"
            android:textSize="32sp"
            android:text="0"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center_vertical|right"
            android:layout_marginLeft="8dp"
            android:singleLine="true"
            android:textSize="32sp"
            android:text="NT$"/>

        <ImageButton
            android:layout_height="match_parent"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_gravity="right"
            android:background="@null"
            android:src="@drawable/ic_action_backspace"
            android:id="@+id/btn_backspace" />
        </LinearLayout>

    <View
        android:layout_width="wrap_content"
        android:layout_height="1dp"
        android:background="#999"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <Button android:id="@+id/btn_1"
            style="@style/calculaterButton"
            android:text="1"/>
        <Button android:id="@+id/btn_2"
            style="@style/calculaterButton"
            android:text="2"/>
        <Button android:id="@+id/btn_3"
            style="@style/calculaterButton"
            android:text="3"/>
        </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <Button android:id="@+id/btn_4"
            style="@style/calculaterButton"
            android:text="4"/>
        <Button android:id="@+id/btn_5"
            style="@style/calculaterButton"
            android:text="5"/>
        <Button android:id="@+id/btn_6"
            style="@style/calculaterButton"
            android:text="6"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <Button android:id="@+id/btn_7"
            style="@style/calculaterButton"
            android:text="7"/>
        <Button android:id="@+id/btn_8"
            style="@style/calculaterButton"
            android:text="8"/>
        <Button android:id="@+id/btn_9"
            style="@style/calculaterButton"
            android:text="9"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <View
            style="@style/calculaterButton"
            android:layout_height="match_parent"
            android:text="" />
        <Button
            style="@style/calculaterButton"
            android:text="0"
            android:id="@+id/btn_0" />
        <View
            style="@style/calculaterButton"
            android:layout_height="match_parent"
            android:text="" />
    </LinearLayout>
</LinearLayout>

